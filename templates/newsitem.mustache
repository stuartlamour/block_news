{{!
    @template blocks_news/newsitem


    Example context (json):
    {
        "image": https://moodle.com/wp-content/uploads/2022/03/our-community-1.svg,
        "link": https://moodle.com/,
        "title": "News time!",
        "description": "This is the news description"
    }
}}

<div class="block-news-item position-relative">

    <div class="block-news-item-image mb-3"
         style="background-image: url('{{{image}}}');
                height: 200px;
                background-size: cover;
                background-position: top center;">
    </div>

    <div class="block-news-item-content">
        <a href="{{{link}}}" target='_blank' class="h5 d-block stretched-link">{{{title}}}</a>
        <p class="py-3">{{{description}}}</p>
    </div>

</div>